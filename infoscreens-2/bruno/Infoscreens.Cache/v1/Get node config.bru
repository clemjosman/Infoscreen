meta {
  name: Get node config
  type: http
  seq: 2
}

get {
  url: {{rootUrl}}/v1/infoscreen?NodeId={{nodeId}}
  body: none
  auth: none
}

params:query {
  NodeId: {{nodeId}}
}

script:post-response {
  test("Content-Type is present and is application/json", function () {
      expect(res.getHeaders()).to.have.property("Content-Type".toLowerCase());
      let contentType = res.getHeader("Content-Type");
      expect(contentType.startsWith("application/json")).is.true;
  });
}
